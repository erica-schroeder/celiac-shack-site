---
// props:
// items: array of objects like { heading, list, imageSrc, alt }
const { items } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="flex flex-col gap-6">
  {items.map((item, index) => (
    <div
      class={`flex flex-col md:flex-row gap-6 items-start
              ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}
    >
      {/* Left/Top Column */}
      <div class="flex-1 space-y-2">
        <h3 class="text-lg font-semibold">{item.heading}</h3>
        <ul class="list-disc list-inside space-y-1">
          {item.list.map(li => <li>{li}</li>)}
        </ul>
      </div>

      {/* Right/Bottom Column */}
      <div class="flex-1 flex justify-center">
        <figure class="flex flex-col items-center gap-2">
          <Image src={item.imageSrc} alt={item.alt} class="rounded-lg w-full max-w-sm" />
          <figcaption class="text-sm italic text-center prose-figcaption:m-0">
            {item.alt}
          </figcaption>
        </figure>
      </div>
    </div>
  ))}
</div>